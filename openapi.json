{
  "openapi": "3.0.3",
  "info": {
    "title": "Traffic Information API",
    "version": "1.0.0"
  },
  "paths": {
    "/roads": {
      "get": {
        "description": "Get all known roads",
        "parameters": [
          {
            "in": "query",
            "name": "datetime",
            "description": "Filter the events to a given date",
            "example": "2020-04-26T14:36:29.098Z",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of roads",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Road"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          }
        }
      }
    },
    "/roads/{name}": {
      "get": {
        "description": "Get a specific road by its name",
        "parameters": [
          {
            "in": "path",
            "name": "name",
            "required": true,
            "schema": {
              "type": "string",
              "example": "A29"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The requested road",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Road"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFoundResponse"
          },
          "400": {
            "$ref": "#/components/responses/BadRequestResponse"
          }
        }
      }
    },
    "/roads/{name}/traffic_jams": {
      "get": {
        "description": "Get all traffic jams for the specified road",
        "parameters": [
          {
            "in": "path",
            "name": "name",
            "required": true,
            "schema": {
              "type": "string",
              "example": "A29"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/TrafficJams"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundResponse"
          }
        }
      }
    },
    "/roads/{name}/roadworks": {
      "get": {
        "description": "Get all roadworks for the specified road",
        "parameters": [
          {
            "in": "path",
            "name": "name",
            "required": true,
            "schema": {
              "type": "string",
              "example": "A29"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/Roadworks"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundResponse"
          }
        }
      }
    },
    "/roads/{name}/radars": {
      "get": {
        "description": "Get all radars for the specified road",
        "parameters": [
          {
            "in": "path",
            "name": "name",
            "required": true,
            "schema": {
              "type": "string",
              "example": "A29"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/Radars"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundResponse"
          }
        }
      }
    },
    "/traffic_jams": {
      "get": {
        "description": "Get all traffic jams",
        "responses": {
          "200": {
            "$ref": "#/components/responses/TrafficJams"
          }
        }
      }
    },
    "/roadworks": {
      "get": {
        "description": "Get all roadworks",
        "responses": {
          "200": {
            "$ref": "#/components/responses/Roadworks"
          }
        }
      }
    },
    "/radars": {
      "get": {
        "description": "Get all currently active radars",
        "responses": {
          "200": {
            "$ref": "#/components/responses/Radars"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "TrafficJams": {
        "description": "A list of traffic jams",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/TrafficJam"
              }
            }
          }
        }
      },
      "Roadworks": {
        "description": "A list of roadworks",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Roadwork"
              }
            }
          }
        }
      },
      "Radars": {
        "description": "A list of radars",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Radar"
              }
            }
          }
        }
      },
      "NotFoundResponse": {
        "description": "The requested resource doesn't exist",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "BadRequestResponse": {
        "description": "One of the given parameters is incorrectly formatted",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    },
    "schemas": {
      "Road": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "A29"
          },
          "TrafficJams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TrafficJam"
            }
          },
          "Roadworks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Roadwork"
            }
          },
          "Radars": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Radar"
            }
          }
        }
      },
      "TrafficEvent": {
        "type": "object",
        "properties": {
          "road": {
            "type": "string",
            "description": "Name of the road",
            "example": "A29"
          },
          "description": {
            "nullable": true,
            "description": "The reason for the event or more information",
            "type": "string"
          },
          "createdAt": {
            "description": "When was this event added",
            "type": "string",
            "format": "date-time"
          },
          "resolvedAt": {
            "nullable": true,
            "description": "When was this event marked as resolved.",
            "type": "string",
            "format": "date-time"
          },
          "startLocation": {
            "$ref": "#/components/schemas/Location"
          },
          "endLocation": {
            "$ref": "#/components/schemas/Location"
          }
        }
      },
      "TrafficJam": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/TrafficEvent"
          }
        ]
      },
      "Roadwork": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/TrafficEvent"
          }
        ]
      },
      "Radar": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/TrafficEvent"
          }
        ]
      },
      "Location": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "knp. Zaandam naar de A8 richting Beverwijk"
          },
          "latitude": {
            "type": "string",
            "example": "52.0645"
          },
          "longitude": {
            "type": "string",
            "example": "4.37822"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "description": "Description of the problem",
            "type": "string"
          }
        }
      }
    }
  }
}